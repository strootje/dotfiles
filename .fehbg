#!/usr/bin/env sh

# variables
PATH_TO_WALLPAPERS=$PWD/Pictures/Backgrounds/Unsplash

echo "Downloading from Unsplash"
unsplash-wallpaper \
		--random \
		--width 1920 \
		--height 1080 \
		--dir $PATH_TO_WALLPAPERS \
		&> /dev/null

LATEST=$(ls -t1 $PATH_TO_WALLPAPERS |  head -n 1)
PATH=$PATH_TO_WALLPAPERS/$LATEST
echo "Setting wallpaper with feh $PATH"
/usr/bin/feh --no-fehbg --bg-scale $PATH $PATH
