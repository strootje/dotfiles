#!/usr/bin/env bash

# imports
source $DOTFILES/.system/shared/logger.sh

run_start() {
	run_kill
	info "starting $NAME"

	PID=$(intel-virtual-output -v > $DOTFILES/ivo.log & echo $!)
	echo $PID > $DOTFILES/ivo.pid
	sleep 2
	xrandr --output VIRTUAL1 --auto --right-of eDP1
}

run_kill() {
	info "killing $NAME"
	pkill -F $DOTFILES/ivo.pid
}

case $1 in
	"kill")run_kill;;
	*)run_start;;
esac
